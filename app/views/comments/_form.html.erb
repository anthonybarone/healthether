<%= form_for(@comment) do |f| %>
  <%= render "shared/errors", object: @comment %>
<br>
<br>
<table>
  <tr>        
        <th><%= f.label :firstname, "First Name:" %></th>
        <td><%= f.text_field :firstname, cols: 60, rows: 1 %></td>
  </tr>      
  <tr>
        <th><%= f.label :lastname, "Last Name:" %></th>
        <td><%= f.text_field :lastname, cols: 60, rows: 1 %></td>
  </tr>
  <tr>
        <th><%= f.label :email, "E-mail" %></th>
        <td><%= f.text_field :email, cols: 60, rows: 1 %></td>
  </tr>
  <tr>
        <th><%= f.label :feedback, "Feedback:" %></th>
        <td><%= f.text_area :note, cols: 40, rows: 8 %></td>
  </tr>
  <tr>
      <th><%= f.submit %></th>
      <td><%= link_to "Cancel", root_path, class: 'button' %></td>
  </tr>
</table>
<% end %>
<br>