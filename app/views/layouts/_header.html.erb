<div class="header">
  <% if current_user %>
    <%= link_to current_user.email, current_user %> is in the house!
    <%= link_to "Sign Out", signout_path, method: :delete, class: 'button' %>
  <% else %>
    <%= link_to "Sign Up", signup_path %> or
    <%= link_to "Sign In", signin_path %>
  <% end %>
</div>